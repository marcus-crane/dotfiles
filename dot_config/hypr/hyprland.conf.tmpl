# Hyprland Configuration
# See https://wiki.hyprland.org/Configuring/

###################
### ENVIRONMENT ###
###################

env = XDG_CURRENT_DESKTOP,Hyprland
env = XDG_SESSION_TYPE,wayland
env = XDG_SESSION_DESKTOP,Hyprland
env = QT_QPA_PLATFORM,wayland
env = QT_QPA_PLATFORMTHEME,qt6ct
env = QT_WAYLAND_DISABLE_WINDOWDECORATION,1
env = GDK_BACKEND,wayland,x11,*
env = SDL_VIDEODRIVER,wayland
env = CLUTTER_BACKEND,wayland

################
### MONITORS ###
################

{{- $monitors := .monitors.default -}}
{{- if hasKey .monitors .chezmoi.hostname -}}
{{-   $monitors = index .monitors .chezmoi.hostname -}}
{{- end }}

{{ range $monitors -}}
monitor = {{ .name }}, {{ .resolution }}@{{ .refresh }}, {{ .position }}, {{ .scale }}
{{ end }}
#############
### INPUT ###
#############

input {
    kb_layout = us
    follow_mouse = 1
    sensitivity = 0
    touchpad {
        natural_scroll = true
        tap-to-click = true
    }
}


#####################
### LOOK AND FEEL ###
#####################

general {
    gaps_in = 5
    gaps_out = 10
    border_size = 2
    col.active_border = rgba(33ccffee) rgba(00ff99ee) 45deg
    col.inactive_border = rgba(595959aa)
    layout = dwindle
    allow_tearing = false
}

decoration {
    rounding = 10
    blur {
        enabled = true
        size = 8
        passes = 2
        new_optimizations = true
    }
    shadow {
        enabled = true
        range = 4
        render_power = 3
        color = rgba(1a1a1aee)
    }
}

animations {
    enabled = true
    bezier = myBezier, 0.05, 0.9, 0.1, 1.05
    animation = windows, 1, 7, myBezier
    animation = windowsOut, 1, 7, default, popin 80%
    animation = border, 1, 10, default
    animation = borderangle, 1, 8, default
    animation = fade, 1, 7, default
    animation = workspaces, 1, 6, default
}

dwindle {
    pseudotile = true
    preserve_split = true
}

misc {
    force_default_wallpaper = 0
    disable_hyprland_logo = true
}

#################
### AUTOSTART ###
#################

exec-once = caelestia shell
exec-once = /usr/lib/polkit-kde-authentication-agent-1

###################
### KEYBINDINGS ###
###################

$mainMod = SUPER

# Caelestia global shortcuts
# Super tap (release) opens launcher
bindr = SUPER, SUPER_L, global, caelestia:launcher

# Interrupt launcher when using Super+key combos
bind = $mainMod, T, global, caelestia:launcherInterrupt
bind = $mainMod, E, global, caelestia:launcherInterrupt
bind = $mainMod, B, global, caelestia:launcherInterrupt
bind = $mainMod, Q, global, caelestia:launcherInterrupt
bind = $mainMod SHIFT, Q, global, caelestia:launcherInterrupt
bind = $mainMod, V, global, caelestia:launcherInterrupt
bind = $mainMod, F, global, caelestia:launcherInterrupt
bind = $mainMod, L, global, caelestia:launcherInterrupt
bind = $mainMod, N, global, caelestia:launcherInterrupt

# Interrupt launcher for workspace switching
bind = $mainMod, 1, global, caelestia:launcherInterrupt
bind = $mainMod, 2, global, caelestia:launcherInterrupt
bind = $mainMod, 3, global, caelestia:launcherInterrupt
bind = $mainMod, 4, global, caelestia:launcherInterrupt
bind = $mainMod, 5, global, caelestia:launcherInterrupt
bind = $mainMod, 6, global, caelestia:launcherInterrupt
bind = $mainMod, 7, global, caelestia:launcherInterrupt
bind = $mainMod, 8, global, caelestia:launcherInterrupt
bind = $mainMod, 9, global, caelestia:launcherInterrupt
bind = $mainMod, 0, global, caelestia:launcherInterrupt

# Interrupt launcher for move-to-workspace
bind = $mainMod SHIFT, 1, global, caelestia:launcherInterrupt
bind = $mainMod SHIFT, 2, global, caelestia:launcherInterrupt
bind = $mainMod SHIFT, 3, global, caelestia:launcherInterrupt
bind = $mainMod SHIFT, 4, global, caelestia:launcherInterrupt
bind = $mainMod SHIFT, 5, global, caelestia:launcherInterrupt
bind = $mainMod SHIFT, 6, global, caelestia:launcherInterrupt
bind = $mainMod SHIFT, 7, global, caelestia:launcherInterrupt
bind = $mainMod SHIFT, 8, global, caelestia:launcherInterrupt
bind = $mainMod SHIFT, 9, global, caelestia:launcherInterrupt
bind = $mainMod SHIFT, 0, global, caelestia:launcherInterrupt

# Interrupt launcher for other missing bindings
bind = $mainMod, P, global, caelestia:launcherInterrupt
bind = $mainMod, J, global, caelestia:launcherInterrupt
bind = $mainMod, left, global, caelestia:launcherInterrupt
bind = $mainMod, right, global, caelestia:launcherInterrupt
bind = $mainMod, up, global, caelestia:launcherInterrupt
bind = $mainMod, down, global, caelestia:launcherInterrupt
bind = $mainMod SHIFT, left, global, caelestia:launcherInterrupt
bind = $mainMod SHIFT, right, global, caelestia:launcherInterrupt
bind = $mainMod SHIFT, up, global, caelestia:launcherInterrupt
bind = $mainMod SHIFT, down, global, caelestia:launcherInterrupt
bind = $mainMod ALT, left, global, caelestia:launcherInterrupt
bind = $mainMod ALT, right, global, caelestia:launcherInterrupt
bind = $mainMod ALT, up, global, caelestia:launcherInterrupt
bind = $mainMod ALT, down, global, caelestia:launcherInterrupt
bind = $mainMod ALT, C, global, caelestia:launcherInterrupt

# Volume - use wpctl directly (Caelestia OSD reacts automatically)
binde = , XF86AudioRaiseVolume, exec, wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+
binde = , XF86AudioLowerVolume, exec, wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
bind = , XF86AudioMute, exec, wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
bind = , XF86AudioMicMute, exec, wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle

# Brightness - Caelestia has shortcuts for this
bind = , XF86MonBrightnessUp, global, caelestia:brightnessUp
bind = , XF86MonBrightnessDown, global, caelestia:brightnessDown

# Media
bind = , XF86AudioPlay, global, caelestia:mediaToggle
bind = , XF86AudioPause, global, caelestia:mediaToggle
bind = , XF86AudioNext, global, caelestia:mediaNext
bind = , XF86AudioPrev, global, caelestia:mediaPrev

# Screenshots
bind = CTRL SHIFT, 4, exec, grim -g "$(slurp)" - | satty -f -

# Lock & Session
bind = $mainMod, L, global, caelestia:lock
bind = CTRL_ALT, Delete, global, caelestia:session

# Application shortcuts
bind = $mainMod, T, exec, kitty
bind = $mainMod, E, exec, dolphin
bind = $mainMod, B, exec, firefox

# Notes scratchpad
bind = $mainMod, N, togglespecialworkspace, notes
bind = $mainMod, N, exec, pgrep -f "^kitty --class notes-scratchpad" || kitty --class notes-scratchpad -o font_size=14 -e zsh -ic 'd=$(date +%Y-%m-%d); f="$HOME/Mainframe/Journal/01 Daily/$d.md"; [[ -f "$f" ]] || printf "---\njournal: Daily\njournal-date: %s\n---\n- \n" "$d" > "$f"; nvim "+normal GA" "$f"'

# Window management
bind = $mainMod, Q, killactive
bind = $mainMod SHIFT, Q, exit
bind = $mainMod, V, togglefloating
bind = $mainMod, F, fullscreen
# Yesterday's notes scratchpad
bind = $mainMod, P, togglespecialworkspace, yesterday
bind = $mainMod, P, exec, pgrep -f "^kitty --class yesterday-scratchpad" || kitty --class yesterday-scratchpad -o font_size=14 -e zsh -ic 'd=$(date -d yesterday +%Y-%m-%d); f="$HOME/Mainframe/Journal/01 Daily/$d.md"; nvim "+normal GA" "$f"'
bind = $mainMod, J, togglesplit

# Focus movement
bind = $mainMod, left, movefocus, l
bind = $mainMod, right, movefocus, r
bind = $mainMod, up, movefocus, u
bind = $mainMod, down, movefocus, d

# Move windows
bind = $mainMod SHIFT, left, movewindow, l
bind = $mainMod SHIFT, right, movewindow, r
bind = $mainMod SHIFT, up, movewindow, u
bind = $mainMod SHIFT, down, movewindow, d

# Nudge floating windows
bind = $mainMod ALT, left, moveactive, -250 0
bind = $mainMod ALT, right, moveactive, 250 0
bind = $mainMod ALT, up, moveactive, 0 -250
bind = $mainMod ALT, down, moveactive, 0 250

# Centre floating window
bind = $mainMod ALT, C, centerwindow

# Cycle through windows
bind = ALT, Tab, cyclenext
bind = ALT SHIFT, Tab, cyclenext, prev

# Workspace switching
bind = $mainMod, 1, workspace, 1
bind = $mainMod, 2, workspace, 2
bind = $mainMod, 3, workspace, 3
bind = $mainMod, 4, workspace, 4
bind = $mainMod, 5, workspace, 5
bind = $mainMod, 6, workspace, 6
bind = $mainMod, 7, workspace, 7
bind = $mainMod, 8, workspace, 8
bind = $mainMod, 9, workspace, 9
bind = $mainMod, 0, workspace, 10

# Move window to workspace
bind = $mainMod SHIFT, 1, movetoworkspace, 1
bind = $mainMod SHIFT, 2, movetoworkspace, 2
bind = $mainMod SHIFT, 3, movetoworkspace, 3
bind = $mainMod SHIFT, 4, movetoworkspace, 4
bind = $mainMod SHIFT, 5, movetoworkspace, 5
bind = $mainMod SHIFT, 6, movetoworkspace, 6
bind = $mainMod SHIFT, 7, movetoworkspace, 7
bind = $mainMod SHIFT, 8, movetoworkspace, 8
bind = $mainMod SHIFT, 9, movetoworkspace, 9
bind = $mainMod SHIFT, 0, movetoworkspace, 10

# Scroll through workspaces
bind = $mainMod, mouse_down, workspace, e+1
bind = $mainMod, mouse_up, workspace, e-1

# Move workspace to monitor
bind = $mainMod SHIFT, bracketleft, movecurrentworkspacetomonitor, -1
bind = $mainMod SHIFT, bracketright, movecurrentworkspacetomonitor, +1

# Move/resize with mouse
bindm = $mainMod, mouse:272, movewindow
bindm = $mainMod, mouse:273, resizewindow
bind = $mainMod, mouse:274, splitratio, exact 1.0

##############################
### WINDOWS AND WORKSPACES ###
##############################

windowrule {
    name = suppress-maximize
    match:class = .*
    suppress_event = maximize
}

# Notes scratchpad rules
windowrule {
    name = notes-scratchpad
    match:class = ^notes-scratchpad$
    workspace = special notes
    float = true
    size = 1000 750
    center = true
}

# Yesterday's notes scratchpad rules
windowrule {
    name = yesterday-scratchpad
    match:class = ^yesterday-scratchpad$
    workspace = special yesterday
    float = true
    size = 1000 750
    center = true
}
