# This Brewfile contains the bare minimum tools that
# I use regularly.
#
# It's intended for use when I use a different laptop
# temporarily and want to get up and running as quick
# as possible

# cli tools
brew "azure-cli"
brew "bash"
brew "curl"
brew "fzf"
brew "htop"
brew "jq"
brew "neovim"
brew "ripgrep"
brew "wget"
brew "zsh"

# apps
cask "1password" # 1password from mac store can't do OTP code scanning
cask "raycast"
