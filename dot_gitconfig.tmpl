[user]
	email = {{ .email }}
	name = {{ .name }}
	signingkey = 15DC6AC2068B5E35827845D20066202F5187A0C8
	useConfigOnly = true
[pull]
	rebase = false
[commit]
	gpgSign = true
[status]
	showStash = true
[checkout]
	workers = 0
[gpg]
	program = /usr/local/MacGPG2/bin/gpg2
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
[init]
	defaultBranch = "main"
{{ $workMode := eq (output "sysctl" "-n" "hw.model" | trim) "MacBookPro16,4" }}
{{ $workLite := (eq (env "WORK_MODE") "1") }}
{{- if (or $workMode $workLite) }}
[includeIf "gitdir:~/Code/work/"]
	path = ~/.work.gitconfig
{{- end }}
