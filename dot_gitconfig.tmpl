[user]
  email = {{ .email }}
  name = {{ .name }}
  signingkey = ~/.ssh/id_ed25519.pub
  useConfigOnly = true
[push]
  default = current
[pull]
  rebase = false
[commit]
  gpgsign = true
  verbose = true
[merge]
  conflictstyle = zdiff3
[diff]
  algorithm = histogram
[rebase]
  autostash = true
[status]
  showStash = true
[checkout]
  workers = 0
[core]
  excludesFile = "~/.gitignore"
  hooksPath = "~/.githooks"
[gpg]
  format = ssh
[url "ssh://git@github.com/"]
  insteadOf = https://github.com/
[init]
  defaultBranch = "main"
{{- if .workmode }}
[includeIf "gitdir:~/halter"]
  path = ~/.work.gitconfig
{{- end }}